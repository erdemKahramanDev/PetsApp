<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ps_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/petshop"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/ps_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kahraman"
            android:layout_toRightOf="@id/ps_image"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:fontFamily="@font/alegreya_sans_sc_black"/>

        <RatingBar
            android:id="@+id/ps_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@id/ps_title"
            android:layout_toRightOf="@+id/ps_image"
            android:layout_marginLeft="10dp"
            android:rating="5"/>

        <TextView
            android:id="@+id/ps_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İşte Sevmenin Tam Zamanı"
            android:layout_below="@+id/ps_rating"
            android:layout_toRightOf="@id/ps_image"
            android:padding="10dp"/>





    </RelativeLayout>



</androidx.cardview.widget.CardView>