<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".User.AllCategories"
    android:background="@color/lightWhite">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">
            <ImageView
                android:id="@+id/back_pressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/back" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/search_icon" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categorıes"
            android:textSize="30sp"
            android:fontFamily="@font/alegreya_sans_sc_black"
            android:textAllCaps="true"
            android:padding="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#FDEDEC"
            android:layout_margin="20dp">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Veterınary"
            android:textSize="30sp"
            android:fontFamily="@font/alegreya_sans_sc_black"
            android:textColor="@color/black"
            android:padding="25dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expand all"
                android:background="#00000000"
                android:padding="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/alegreya_sans_sc_black"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/b"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="#FADBD8">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/b1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health"
                android:textSize="30sp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/alegreya_sans_sc_black"
                android:textColor="@color/black"
                android:padding="25dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expand all"
                android:background="#00000000"
                android:padding="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/alegreya_sans_sc_black"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#F5B7B1 "
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="map"
                android:textSize="30sp"
                android:fontFamily="@font/alegreya_sans_sc_black"
                android:textColor="@color/black"
                android:padding="25dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expand all"
                android:background="#00000000"
                android:padding="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/alegreya_sans_sc_black"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/b2"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="#F1948A">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/b3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="30sp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/alegreya_sans_sc_black"
                android:textColor="@color/black"
                android:padding="25dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expand all"
                android:background="#00000000"
                android:padding="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/alegreya_sans_sc_black"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#EC7063"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="securıty"
                android:textSize="30sp"
                android:fontFamily="@font/alegreya_sans_sc_black"
                android:textColor="@color/black"
                android:padding="25dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expand all"
                android:background="#00000000"
                android:padding="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/alegreya_sans_sc_black"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/b4"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="#E74C3C ">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/b5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop"
                android:textSize="30sp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/alegreya_sans_sc_black"
                android:textColor="@color/black"
                android:padding="25dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expand all"
                android:background="#00000000"
                android:padding="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/alegreya_sans_sc_black"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>